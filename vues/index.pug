block content
  script.
    function HttpJwtHeader(url){
      const token = localStorage.getItem('token')
      $.ajax({
        url: url,
        headers: { 'Authorization': token },
        success : function(data){
          
          console.log(document.getElementsByTagName("html")[0])
          document.write(data);
        }
      });
      /* $.get( url, { Authorization:token } ); */
    }

